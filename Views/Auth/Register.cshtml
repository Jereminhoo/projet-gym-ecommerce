@model Projet_salle_de_gym.Models.Auth.UtilisateurRegisterModel

<h2>Inscription</h2>

<form asp-action="Register" method="post">
    <label>Nom :</label>
    <input asp-for="Nom_util" required /><br />

    <label>Prénom :</label>
    <input asp-for="Prenom_util" required /><br />

    <label>Email :</label>
    <input asp-for="Mail" type="email" required /><br />

    <label>Mot de passe :</label>
    <input asp-for="Mdp" type="password" required /><br />

    <button type="submit">S’inscrire</button>
</form>
