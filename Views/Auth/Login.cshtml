@model Projet_salle_de_gym.Models.Auth.LoginModel

<h2>Connexion</h2>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Mail">Entrez votre email</label>
        <input asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mdp">Entrez votre mot de passe</label>
        <input asp-for="Mdp" type="password" class="form-control" />
        <span asp-validation-for="Mdp" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Connexion</button>
</form>
