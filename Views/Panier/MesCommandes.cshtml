@model List<Projet_salle_de_gym.Models.Panier.PanierItem>

<h2 class="mt-4 mb-4">🛒 Mes commandes</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Vous n'avez encore passé aucune commande.</div>
}
else
{
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DateCommande.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Nom</td>
                    <td>@item.Quantite</td>
                    <td>@string.Format("{0:0.00} €", item.Prix)</td>
                </tr>
            }
        </tbody>
    </table>
}
